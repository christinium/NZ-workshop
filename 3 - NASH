        "# Now load the data\n",
        "# Notice this ooks like our SQL query we practiced in the SQL section\n",
        "notes = run_query('''\n",
        "SELECT row_id, subject_id, hadm_id, text\n",
        "FROM `nlp_demo.discharge`\n",
        "''')"
      ],
      "execution_count": 0,
